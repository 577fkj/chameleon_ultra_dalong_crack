.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, .1);
  margin: 20rpx;
  padding: 30rpx
}

.btn {
  border: none;
  border-radius: 12rpx;
  cursor: pointer;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  text-align: center;
  transition: all .3s ease
}

.btn.btn-primary {
  background: #007aff;
  color: #fff
}

.btn.btn-primary:hover {
  background: #0056b3
}

.btn.btn-success {
  background: #28a745;
  color: #fff
}

.btn.btn-success:hover {
  background: #1e7e34
}

.btn.btn-warning {
  background: #ffc107;
  color: #212529
}

.btn.btn-warning:hover {
  background: #e0a800
}

.btn.btn-danger {
  background: #dc3545;
  color: #fff
}

.btn.btn-danger:hover {
  background: #c82333
}

.btn.btn-outline {
  background: transparent;
  border: 2rpx solid #007aff;
  color: #007aff
}

.btn.btn-outline:hover {
  background: #007aff;
  color: #fff
}

.btn.btn-sm {
  font-size: 24rpx;
  padding: 15rpx 30rpx
}

.btn.btn-lg {
  font-size: 32rpx;
  padding: 25rpx 50rpx
}

.btn:disabled {
  cursor: not-allowed;
  opacity: .6
}

.input {
  background: #fff;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 20rpx;
  width: 100%
}

.input:focus {
  border-color: #007aff;
  outline: none
}

.input.input-error {
  border-color: #dc3545
}

.badge {
  border-radius: 6rpx;
  display: inline-block;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  text-align: center
}

.badge.badge-primary {
  background: #007aff;
  color: #fff
}

.badge.badge-success {
  background: #28a745;
  color: #fff
}

.badge.badge-warning {
  background: #ffc107;
  color: #212529
}

.badge.badge-danger {
  background: #dc3545;
  color: #fff
}

.badge.badge-info {
  background: #17a2b8;
  color: #fff
}

.badge.badge-light {
  background: #f8f9fa;
  color: #495057
}

.status-indicator {
  border-radius: 50%;
  display: inline-block;
  height: 20rpx;
  margin-right: 10rpx;
  width: 20rpx
}

.status-indicator.status-online {
  background: #28a745
}

.status-indicator.status-offline {
  background: #6c757d
}

.status-indicator.status-error {
  background: #dc3545
}

.status-indicator.status-warning {
  background: #ffc107
}

@-webkit-keyframes spin {
  0% {
    transform: rotate(0)
  }

  to {
    transform: rotate(1turn)
  }
}

@keyframes spin {
  0% {
    transform: rotate(0)
  }

  to {
    transform: rotate(1turn)
  }
}

.loading-spinner {
  animation: spin 1s linear infinite;
  border: 4rpx solid #f3f3f3;
  border-radius: 50%;
  border-top-color: #007aff;
  display: inline-block;
  height: 40rpx;
  width: 40rpx
}

@media (max-width:750rpx) {
  .card {
    margin: 10rpx;
    padding: 20rpx
  }

  .container {
    padding: 15rpx
  }
}

:root {
  --primary-color: #007aff;
  --success-color: #28a745;
  --warning-color: #ffc107;
  --danger-color: #dc3545;
  --info-color: #17a2b8;
  --light-color: #f8f9fa;
  --dark-color: #343a40;
  --muted-color: #6c757d;
  --border-radius: 12rpx;
  --box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, .1);
  --transition: all .3s ease
}

page::after {
  animation: shadow-preload .1s;
  animation-delay: 3s;
  content: "";
  left: -1000px;
  position: fixed;
  top: -1000px
}

@-webkit-keyframes shadow-preload {
  0% {
    background-image: url(https://cdn1.dcloud.net.cn/4f544e444d6a46424d43556c64336734595463774d7a5a6d4f4467324e6a59784d7a4a6b/img/shadow-grey.png)
  }

  100% {
    background-image: url(https://cdn1.dcloud.net.cn/4f544e444d6a46424d43556c64336734595463774d7a5a6d4f4467324e6a59784d7a4a6b/img/shadow-grey.png)
  }
}

@keyframes shadow-preload {
  0% {
    background-image: url(https://cdn1.dcloud.net.cn/4f544e444d6a46424d43556c64336734595463774d7a5a6d4f4467324e6a59784d7a4a6b/img/shadow-grey.png)
  }

